<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/azul"
        android:padding="50dp"
>

    <ImageView
            android:layout_width="501dp"
            android:layout_height="109dp"
            android:src="@drawable/logo_footer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:id="@+id/imageView"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_email"
            android:textColor="@color/branco"
            android:textSize="40sp"
            android:fontFamily="@font/verdana"


            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="exemplo@email.com"
            android:textColorHint="#9B9B9B"
            android:textSize="25sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:paddingStart="10dp"

            android:id="@+id/campo_email"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_email"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_senha"
            android:textColor="@color/branco"
            android:textSize="40sp"
            android:fontFamily="@font/verdana"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/campo_email" android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="******"
            android:textColorHint="#9B9B9B"
            android:textSize="25sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:paddingStart="10dp"

            android:id="@+id/campo_senha"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_senha"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Entrar"
            android:textAllCaps="false"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/btn_entrar"
            android:fontFamily="@font/titilliumweb_bold"
            android:textSize="25sp"
            android:textColor="@color/azul"
            android:backgroundTint="@color/verde"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campo_senha" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>